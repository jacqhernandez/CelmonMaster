<h1>Locations</h1>

<%= link_to "New location", new_location_path %>

<table width="100%">
  <tr>
    <th>Name</th>
    <th>GPS Location</th>
    <th>Creature</th>
    <th></th>
    <th></th>
  </tr>
  <% @locations.each do |location| %>
    <tr>
      <td><%= location.name %></td>
      <td><%= location.gps %></td>
      <td><%= location.creature %></td>
      <td><%= link_to "Update", edit_location_path(location.id) %></td>
      <td><%= link_to "Destroy", location_path(location.id), :method => :delete, :data => { :confirm => "Are you sure?" } %></td>      
    </tr>
  <% end %>
</table>
<br>

