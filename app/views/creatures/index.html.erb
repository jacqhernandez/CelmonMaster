<h1>Creature</h1>

<%= link_to "New creature", new_creature_path %>

<table width="100%">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th></th>
    <th></th>
  </tr>
  <% @creatures.each do |creature| %>
    <tr>
      <td><%= creature.name %></td>
      <td><%= creature.description %></td>
      <td><%= link_to "Update", edit_creature_path(creature.id) %></td>
      <td><%= link_to "Destroy", creature_path(creature.id), :method => :delete, :data => { :confirm => "Are you sure?" } %></td>      
    </tr>
  <% end %>
</table>
<br>

